<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgHotel"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_launcher"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/nameHotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hotel Krunal"
                android:textSize="22dp"
                android:textColor="@color/Orange"
                />

            <TextView
                android:id="@+id/mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 9737388786"
                android:textSize="12dp"
                android:textColor="@color/Orange"
                />






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >


                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"


                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:layout_gravity="center"
                    android:src="@drawable/train_route_map"/>


                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="733 59th Street,Bruklyn, Raja Park,Jaipur "
                    android:textColor="@color/White"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price Range :"
                android:textSize="14dp"
                android:textColor="@color/Orange"
                />

                <TextView
                    android:id="@+id/priceRange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000 - 5000 INR"
                    android:textSize="14dp"
                    android:textColor="@color/White"
                    />

                </LinearLayout>





        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="4dp">




            <TextView

                android:id="@+id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text=" 4.5 "
                android:layout_margin="4dp"
                android:textColor="@color/Red"
                android:textSize="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="4dp"
                android:paddingLeft="4dp"
android:drawableRight="@drawable/ic_toggle_star"
                android:background="@color/Orange"/>




            <include
                layout="@layout/veglayout"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>