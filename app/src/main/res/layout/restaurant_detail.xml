<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <LinearLayout
        android:id="@+id/ll_hotel_kunal_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/hotel_kunal_dark_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:orientation="horizontal"
            android:background="@color/average_delay_color"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <ImageView
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/ic_leftarrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="8dp"
            android:textColor="#ffffff"
            android:textSize="@dimen/big_text"
            android:text="Hotel name"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/hotel_booking_img"
            android:scaleType="centerCrop"/>

    <LinearLayout
        android:id="@+id/ll_hotel_kunal_top1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pnr_bg"
        android:padding="8dp"
        android:orientation="vertical" >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="Restaurant Details"
            android:textColor="@color/Orange"
            android:textSize="12sp"
            android:layout_marginTop="4dp"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="Hioghest quality sealed pack Food It is long time established fact that a reader will be distrected by the readable content of a page when looking at its layout "
            android:textColor="@color/Orange"
            android:textSize="10sp"
            android:layout_margin="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

<LinearLayout
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="+91 9987975433 "
            android:textColor="@color/Orange"
            android:textSize="16sp"
            android:layout_margin="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 km From Station "
            android:textColor="@color/departure_color"
            android:textSize="12sp"
            android:layout_margin="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="South Indian,North Indian, Jain Food "
            android:textColor="@color/White"
            android:textSize="12sp"
            android:layout_margin="4dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:paddingTop="4dp" >


        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"


            android:gravity="center"
            android:paddingTop="4dp"
            android:layout_gravity="center"
         android:src="@drawable/departure"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00 to 22:00 Hrs "
            android:textColor="@color/White"
            android:textSize="14sp"
            android:gravity="center"
            android:paddingTop="4dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
           />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="Min Order : 300 INR "
            android:textColor="@color/Orange"
            android:textSize="16sp"
            android:layout_margin="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="Delivery : Free "
            android:textColor="@color/Orange"
            android:textSize="16sp"
            android:layout_margin="4dp"/>


</LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="4dp">


                <TextView

                    android:id="@+id/tvRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text=" 4.5 "
                    android:layout_margin="4dp"
                    android:textColor="@color/Red"
                    android:textSize="14dp"
                    android:padding="4dp"
                    android:background="@color/Orange"/>


                <include
                    layout="@layout/veglayout"/>

            </LinearLayout>




        </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.20"
            android:orientation="vertical"
            android:paddingTop="4dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:text="REST stands for REpresentational State Transfer (REST) R"
                android:textColor="@color/Orange"
                android:textSize="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.80"
            android:orientation="horizontal" >



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.40"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="8dp" >



                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_hotel_kunal_middle"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@+id/ll_hotel_kunal_top"
        android:background="@color/my_custom_orange"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thali"
                android:textColor="@color/Red"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="@color/Red"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textColor="@color/Red"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>
    
    <ListView
        android:id="@+id/listview" 
        android:layout_width="match_parent"
        android:layout_below="@+id/ll_hotel_kunal_middle"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_hotel_kunal_place_order"></ListView>




    <TextView
        android:id="@+id/tv_hotel_kunal_place_order"
        android:padding="6dp"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/my_custom_orange"
        android:text="Place Order"
        android:textColor="@color/White" />

</RelativeLayout>