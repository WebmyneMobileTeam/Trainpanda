<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pnr_bg"

    android:orientation="vertical">
<LinearLayout
    android:padding="16dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:text="Hotel Name"
    android:id="@+id/txtHotelName"
    android:textSize="@dimen/big_text"
    android:textColor="@color/my_custom_orange"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/icon_calendar_orange"
            android:text="Hotel Name"
            android:id="@+id/txtDate"
            android:textSize="@dimen/small_text"
            android:textColor="@color/my_custom_orange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textStyle="bold"
            android:text="INR 200"
            android:id="@+id/txtPrice"
            android:textSize="@dimen/normal_text"
            android:textColor="@color/my_custom_orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="5dp"
        android:text="Hotel Name"
        android:id="@+id/txtStaionName"
        android:textSize="@dimen/small_text"
        android:textColor="#048eb6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="5dp"
        android:text="South indian"
        android:id="@+id/txtFoodType"
        android:textSize="@dimen/small_text"
        android:textColor="@color/White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

       <LinearLayout
           android:layout_weight="1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
        <TextView
            android:padding="8dp"
            android:background="@drawable/boundry2"
            android:text="Rating"
            android:id="@+id/txtRating"
            android:textSize="@dimen/small_text"
            android:textColor="@color/my_custom_orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
       </LinearLayout>
        <TextView
            android:padding="8dp"
            android:background="@drawable/boundry3"
            android:textStyle="bold"
            android:text="4.5"
            android:id="@+id/txtRatingBox"
            android:textSize="@dimen/small_text"
            android:textColor="@color/Dark_Red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>
</LinearLayout>