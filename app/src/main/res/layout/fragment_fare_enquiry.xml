<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/ticket_fare_top_bg"
                android:orientation="vertical"
                android:padding="12dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.50"
                        android:gravity="center|left"
                        android:orientation="horizontal" >

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.75" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/train_number"
                                android:text="Train Number"
                                android:textColor="@color/White"
                                android:textSize="16dp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.25"
                            android:gravity="center" >

                            <ProgressBar
                                android:id="@+id/progressBar_train_numbers"
                                style="?android:attr/progressBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:indeterminate="true"
                                android:visibility="gone" >
                            </ProgressBar>
                        </RelativeLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.50"
                        android:gravity="center|right" >

                        <AutoCompleteTextView
                            android:id="@+id/train_fair_actv_train_number"
                            android:layout_width="125dp"
                            android:layout_height="24dp"
                            android:background="@drawable/edittext_bg"
                            android:gravity="center"
                            android:hint="Train Number"
                            android:inputType="number"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:textColor="@color/Dark_Red"
                            android:textColorHint="@color/White"
                            android:textSize="12dp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.50"
                        android:gravity="center|left"
                        android:orientation="horizontal" >

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.75" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/train_number"
                                android:text="Source"
                                android:textColor="@color/White"
                                android:textSize="16dp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.25"
                            android:gravity="center" >

                            <ProgressBar
                                android:id="@+id/my_progressBar"
                                style="?android:attr/progressBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:indeterminate="true"
                                android:visibility="gone" >
                            </ProgressBar>
                        </RelativeLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.50"
                        android:gravity="center|right" >

                        <AutoCompleteTextView
                            android:id="@+id/train_fair_actv_source_station"
                            android:layout_width="125dp"
                            android:layout_height="24dp"
                            android:background="@drawable/edittext_bg"
                            android:gravity="center"
                            android:hint="Station Code"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:textColor="@color/Dark_Red"
                            android:textColorHint="@color/White"
                            android:textSize="12dp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.50"
                        android:gravity="center|left"
                        android:orientation="horizontal" >

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.75" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/train_number"
                                android:text="Destination"
                                android:textColor="@color/White"
                                android:textSize="16dp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.25"
                            android:gravity="center" >

                            <ProgressBar
                                android:id="@+id/my_progressBar2"
                                style="?android:attr/progressBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:indeterminate="true"
                                android:visibility="gone" >
                            </ProgressBar>
                        </RelativeLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.50"
                        android:gravity="center|right" >

                        <AutoCompleteTextView
                            android:id="@+id/train_fair_actv_destination_station"
                            android:layout_width="125dp"
                            android:layout_height="24dp"
                            android:background="@drawable/edittext_bg"
                            android:gravity="center"
                            android:hint="Station Code"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:textColor="@color/Dark_Red"
                            android:textColorHint="@color/White"
                            android:textSize="12dp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.40"
                        android:gravity="center|left" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/train_number"
                            android:text="Date of Journey"
                            android:textColor="@color/White"
                            android:textSize="16dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.60"
                        android:gravity="center|right" >

                        <TextView
                            android:id="@+id/train_fair_tv_doj"
                            android:layout_width="125dp"
                            android:layout_height="24dp"
                            android:background="@drawable/edittext_bg"
                            android:ems="10"
                            android:gravity="center"
                            android:text="Select"
                            android:textColor="@color/Dark_Red"
                            android:textColorHint="@color/White"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.40"
                        android:gravity="center|left" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/train_number"
                            android:text="Quotas"
                            android:textColor="@color/White"
                            android:textSize="16dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.60"
                        android:gravity="center|right" >

                        <AutoCompleteTextView
                            android:id="@+id/train_fair_actv_quotas"
                            android:layout_width="125dp"
                            android:layout_height="24dp"
                            android:background="@drawable/edittext_bg"
                            android:gravity="center"
                            android:hint="Quotas"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:textColor="@color/Dark_Red"
                            android:textColorHint="@color/White"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.40"
                        android:gravity="center|left" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/train_number"
                            android:text="Age"
                            android:textColor="@color/White"
                            android:textSize="16dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.60"
                        android:gravity="center|right" >

                        <EditText
                            android:id="@+id/train_fair_ed_age"
                            android:layout_width="125dp"
                            android:layout_height="24dp"
                            android:background="@drawable/edittext_bg"
                            android:ems="10"
                            android:gravity="center"
                            android:hint="age"
                            android:inputType="number"
                            android:textColor="@color/Dark_Red"
                            android:textColorHint="@color/White"
                            android:textSize="16dp" >
                        </EditText>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/train_fare_ll_go_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:background="@color/Orange"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="4dp" >

                    <TextView
                        android:id="@+id/train_fare_tv_go_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/train_number"
                        android:text="Go"
                        android:textColor="@color/White"
                        android:textSize="16dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_below="@+id/ll_train_fair_first"
                android:background="@drawable/red_bg"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/train_fair_tv_train_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#DC7A00"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/train_fair_tv_train_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/ll_train_fair_second"
                android:background="@drawable/ticket_fare_top_bg"
                android:orientation="vertical"
                android:padding="12dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.40"
                        android:gravity="center|left" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/train_number"
                            android:text="From : "
                            android:textColor="@color/Orange"
                            android:textSize="16dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.60"
                        android:gravity="center|right" >

                        <TextView
                            android:id="@+id/train_fair_tv_from"
                            android:layout_width="125dp"
                            android:layout_height="24dp"
                            android:background="@drawable/edittext_bg"
                            android:ems="10"
                            android:gravity="center"
                            android:textColor="@color/Dark_Red"
                            android:textSize="12dp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.40"
                        android:gravity="center|left" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/train_number"
                            android:text="To : "
                            android:textColor="@color/Orange"
                            android:textSize="16dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.60"
                        android:gravity="center|right" >

                        <TextView
                            android:id="@+id/train_fair_tv_to"
                            android:layout_width="125dp"
                            android:layout_height="24dp"
                            android:background="@drawable/edittext_bg"
                            android:ems="10"
                            android:gravity="center"
                            android:textColor="@color/Dark_Red"
                            android:textSize="12dp" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:background="@drawable/orange_border"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="44dp"
                            android:src="@drawable/myclass"
                            android:text="Class"
                            android:textColor="@color/Browne"
                            android:textSize="16dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|right" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="44dp"
                            android:src="@drawable/myclass"
                            android:text="Fare"
                            android:textColor="@color/Browne"
                            android:textSize="16dp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_train_fair_fifth"
                    android:layout_width="match_parent"
                    android:layout_height="148dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/ticket_fare_bottom_bg"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal" >

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:padding="5dp" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="40dp"
                                android:text="General"
                                android:textColor="@color/White"
                                android:textSize="14dp" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:orientation="horizontal"
                            android:padding="5dp" >

                            <ImageView
                                android:id="@+id/train_fair_iv_general_rupee"
                                android:layout_width="9dp"
                                android:layout_height="14dp"
                                android:layout_marginRight="4dp"
                                android:src="@drawable/indian_rupee" />

                            <TextView
                                android:id="@+id/train_fair_tv_general_fare"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="40dp"
                                android:text="0"
                                android:textColor="#FFFFFF"
                                android:textSize="14dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:padding="5dp" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="40dp"
                                android:text="Sleeper"
                                android:textColor="@color/White"
                                android:textSize="14dp" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:orientation="horizontal"
                            android:padding="5dp" >

                            <ImageView
                                android:id="@+id/train_fair_iv_second_sleeper_rupee"
                                android:layout_width="9dp"
                                android:layout_height="14dp"
                                android:layout_marginRight="4dp"
                                android:src="@drawable/indian_rupee" />

                            <TextView
                                android:id="@+id/train_fair_tv_second_sleeper_fare"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="40dp"
                                android:text="0"
                                android:textColor="#FFFFFF"
                                android:textSize="14dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:padding="5dp" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="40dp"
                                android:text="3 Tier AC"
                                android:textColor="@color/White"
                                android:textSize="14dp" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:orientation="horizontal"
                            android:padding="5dp" >

                            <ImageView
                                android:id="@+id/train_fair_iv_three_tier_ac_rupee"
                                android:layout_width="9dp"
                                android:layout_height="14dp"
                                android:layout_marginRight="4dp"
                                android:src="@drawable/indian_rupee" />

                            <TextView
                                android:id="@+id/train_fair_tv_three_tier_ac_fare"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="40dp"
                                android:text="0"
                                android:textColor="#FFFFFF"
                                android:textSize="14dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:padding="3dp" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="40dp"
                                android:text="2 Tier AC"
                                android:textColor="@color/White"
                                android:textSize="14dp" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:orientation="horizontal"
                            android:padding="5dp" >

                            <ImageView
                                android:id="@+id/train_fair_iv_two_tier_ac_rupee"
                                android:layout_width="9dp"
                                android:layout_height="14dp"
                                android:layout_marginRight="4dp"
                                android:src="@drawable/indian_rupee" />

                            <TextView
                                android:id="@+id/train_fair_tv_two_tier_ac_fare"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="40dp"
                                android:text="0"
                                android:textColor="#FFFFFF"
                                android:textSize="14dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:padding="5dp" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="40dp"
                                android:text="1 AC"
                                android:textColor="@color/White"
                                android:textSize="14dp" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:orientation="horizontal"
                            android:padding="5dp" >

                            <ImageView
                                android:id="@+id/train_fair_iv_one_ac_rupee"
                                android:layout_width="9dp"
                                android:layout_height="14dp"
                                android:layout_marginRight="4dp"
                                android:src="@drawable/indian_rupee" />

                            <TextView
                                android:id="@+id/train_fair_tv_one_ac_fare"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="40dp"
                                android:text="0"
                                android:textColor="#FFFFFF"
                                android:textSize="14dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/my_progressBar1"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminate="true"
            android:visibility="gone" >
        </ProgressBar>
    </RelativeLayout>

</ScrollView>