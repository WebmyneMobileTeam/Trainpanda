<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <com.hackaholic.trainpanda.utility.ExpandablePanel
        android:id="@+id/expandablePanel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:animationDuration="500"
        app:collapsedHeight="100dip"
        app:content="@+id/ll_pnr_first"
        app:handle="@+id/expand"
        app:isviewgroup="true"
        app:viewgroup="@+id/expandL" >

        <LinearLayout
            android:id="@+id/ll_pnr_first"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/pnr_background"
            android:maxHeight="90dip"
            android:orientation="horizontal"
            android:padding="4dp"
            android:visibility="gone" >

            <LinearLayout
                android:id="@+id/passenger_detail_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_pnr_third"
                android:orientation="vertical"
                android:visibility="visible" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Orange"
                    android:orientation="horizontal"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:visibility="visible" >

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:gravity="center|left" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Passengers"
                            android:textColor="@color/Black"
                            android:textSize="10dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Seats"
                            android:textColor="@color/Black"
                            android:textSize="10dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="9dp"
                        android:layout_weight="1"
                        android:gravity="center|right" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:textColor="@color/Black"
                            android:textSize="10dp" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <ListView
                android:id="@+id/pnr_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/passenger_detail_menu"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/expandL"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="100" >

            <TextView
                android:id="@+id/view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="25"
                android:text="PNR Details"
                android:textColor="#FFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/expand"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="75"
                android:background="@color/Orange"
                android:gravity="center"
                android:padding="10dp"
                android:text="Show"
                android:textColor="@color/White" />
        </LinearLayout>
    </com.hackaholic.trainpanda.utility.ExpandablePanel>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/pnr_ll_pre_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/pnr_background"
        android:orientation="horizontal" >

        <RelativeLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_weight="0.60"
            android:background="@drawable/edittext_bg"
            android:gravity="center" >

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.80"
                    android:gravity="center" >

                    <AutoCompleteTextView
                        android:id="@+id/train_route_actv_train_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_bg"
                        android:gravity="center"
                        android:hint="Train Number"
                        android:inputType="number"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textColor="@color/Dark_Red"
                        android:textColorHint="@color/White"
                        android:textSize="14dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.20"
                    android:gravity="center" >

                    <ProgressBar
                        android:id="@+id/progressBar_train_routes"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:indeterminate="true"
                        android:visibility="gone" >
                    </ProgressBar>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:layout_weight="0.40"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="4dp"
            android:paddingTop="4dp" >

            <TextView
                android:id="@+id/train_route_tv_go"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/Orange"
                android:gravity="center"
                android:text="Go"
                android:textColor="@color/White"
                android:textSize="16dp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:background="@color/White"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:src="@drawable/train_route" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Plat Form"
                android:textColor="@color/mehroon"
                android:textSize="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:textColor="@color/mehroon"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.80"
            android:background="@color/orange_dark"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/train_route_train_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Train Name"
                android:textColor="@color/White"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/train_route_train_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/mehroon"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/train_route_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:dividerHeight="1dp" >
    </ListView>

</LinearLayout>