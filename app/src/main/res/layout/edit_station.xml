<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addBabyView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_margin="28dp"
    android:gravity="center"
    tools:context="com.example.android.parvarish_nutricalculator.ui.HomeScreen">

    <LinearLayout
        android:background="#fff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:background="@color/Dark_Red"
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/txtTiltle"
            android:gravity="center"
            android:text="Edit Station"
            android:textColor="@color/my_custom_orange"
            android:textSize="@dimen/normal_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



</LinearLayout>

     <FrameLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

    <AutoCompleteTextView
        android:textColor="@color/Dark_Red"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:gravity="center"
        android:textSize="@dimen/small_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/edStat"
        android:hint="Enter new Station"
        />
         <ProgressBar
             android:id="@+id/pb_loading_indicator"
             style="?android:attr/progressBarStyleSmall"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_vertical|right"
             android:layout_marginRight="16dp"
             android:visibility="gone"/>

     </FrameLayout>
    <LinearLayout
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/txtUpdate"
            android:layout_margin="8dp"
            android:padding="4dp"
            android:background="@color/my_custom_orange"
            android:gravity="center"
            android:text="UPDATE"
            android:textColor="#000000"
            android:textSize="@dimen/small_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtClose"
            android:layout_margin="8dp"
            android:padding="4dp"
            android:background="@color/my_custom_orange"
            android:layout_weight="1"
            android:gravity="center"
            android:text="CLOSE"
            android:textColor="#000000"
            android:textSize="@dimen/small_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>